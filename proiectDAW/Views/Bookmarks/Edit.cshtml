@model proiectDAW.Models.Bookmark


<h2 class="text-center mt-5">Editeaza bookmark-ul</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "Edit", controllerName: "Bookmarks",
            method: FormMethod.Post, routeValues: new { id = Model.Id }))
            {

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("Title", "Titlul ")
                <br />
                @Html.TextBox("Title", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                <br />
                @Html.Label("Photo_Cover", "Coperta ")
                <br />
                @Html.TextBox("Photo_Cover", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Photo_Cover, "", new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("Description", "Descrierea ")
                <br />
                @Html.TextArea("Description", null, new { @class = "form-control" })

                @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
                <br />


                <button class="buton_cautare button1" type="submit">Editeaza bookmark-ul</button>

            }

        </div>
    </div>
</div>